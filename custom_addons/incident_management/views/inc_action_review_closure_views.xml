<odoo>
    <record id="action_review_model_action" model="ir.actions.act_window">
        <field name="name">All Action Reviews</field>
        <field name="res_model">x.inc.inv.action.review</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="action_review_form_view" model="ir.ui.view">
        <field name="name">x.inc.inv.action.review.form</field>
        <field name="model">x.inc.inv.action.review</field>
        <field name="arch" type="xml">
            <form string="Action Review">
                <header>
                    <button name="start_review" type="object" string="Start" class="btn-primary" attrs="{'invisible': [('state', '!=', 'new')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,review,followup,management,closed"/>
                </header>
                <sheet>
                    <group>
                        <field name="corrective_action_id"/>
                    </group>
                    <group col="2" string="Action Review">
                        <group>
                            <field name="reviewer" attrs="{'readonly': [('state', '=', 'closed')]}"/>
                            <field name="review_completion_date"  attrs="{'readonly': [('state', '=', 'closed')]}"/>
                        </group>
                        <group>
                            <field name="risks_and_opportunities_reviewed" widget="radio"
                                   options="{'horizontal': true}"  attrs="{'readonly': [('state', '=', 'closed')]}"/>
                            <field name="job_hazard_analysis_reviewed" widget="radio" options="{'horizontal': true}"  attrs="{'readonly': [('state', '=', 'closed')]}"/>
                        </group>
                    </group>
                    <group attrs="{'invisible': [('state', 'in', ('new', 'closed'))]}">
                        <button name="action_confirm" type="object" string="Confirm" class="btn-primary"/>
                        <button name="action_return" type="object" string="Return" class="btn-primary"/>
                    </group>
                    <br/>
                    <group col="3" string="Followup &amp; Closure" attrs="{'invisible': [('state', 'in', ('new', 'review'))]}">
                        <group>
                            <field name="report_closed_by" attrs="{'readonly': [('state', '=', 'closed')]}"/>
                        </group>
                        <group>
                            <field name="comments"  attrs="{'required': [('state', '=', 'followup')], 'readonly': [('state', '=', 'closed')]}"/>
                        </group>
                        <group>
                            <field name="closure_date" attrs="{'readonly': [('state', '=', 'closed')]}"/>
                        </group>
                        <group>
                            <field name="action_follow_up_required" widget="radio"  attrs="{'readonly': [('state', '=', 'closed')]}" options="{'horizontal': true}"/>
                        </group>
                        <group>
                            <field name="review_by_ceo_vp_gm_required" widget="radio" attrs="{'readonly': [('state', '=', 'closed')]}" options="{'horizontal': true}"/>
                            <field name="justification"/>
                        </group>
                    </group>
                    <group attrs="{'invisible': [('state', 'in', ('new','review','closed'))]}">
                        <button name="action_close" type="object" string="Close" attrs="{'readonly': [('review_by_ceo_vp_gm_required', '=', 'yes')]}" class="btn-primary"/>
                        <button name="action_resubmit_for_review" type="object" string="Resubmit for Review" class="btn-primary"/>
                    </group>
                    <br/>
                    <group col="3" string="Management Review" attrs="{'invisible': ['|', ('state', 'not in', ('followup', 'closed')), ('review_by_ceo_vp_gm_required', '=', 'no')]}">
                        <group>
                            <field name="reviewed_by_ceo_vp_gm" attrs="{'required': [('state', '=', 'management')], 'readonly': [('state', '=', 'closed')]}"/>
                        </group>
                        <group>
                            <field name="reviewed_comments" attrs="{'required': [('state', '=', 'management')], 'readonly': [('state', '=', 'closed')]}"/>
                        </group>
                        <group>
                            <field name="review_date" attrs="{'required': [('state', '=', 'management')], 'readonly': [('state', '=', 'closed')]}"/>
                        </group>
                    </group>
                    <group attrs="{'invisible': ['|', ('state', '!=', 'followup'), ('review_by_ceo_vp_gm_required', '=', 'no')]}">
                        <button name="action_close" type="object" string="Close" class="btn-primary"/>
                        <button name="action_return_further_action" type="object" string="Return for Further Action" class="btn-primary"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_action_review_tree" model="ir.ui.view">
        <field name="name">x.inc.inv.action.review.tree</field>
        <field name="model">x.inc.inv.action.review</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="reviewer"/>
                <field name="review_completion_date"/>
                <field name="risks_and_opportunities_reviewed"/>
                <field name="job_hazard_analysis_reviewed"/>
                <field name="state"/>
                <field name="report_closed_by"/>
                <field name="closure_date"/>
                <field name="comments"/>
                <field name="action_follow_up_required"/>
                <field name="review_by_ceo_vp_gm_required"/>
            </tree>
        </field>
    </record>
</odoo>
