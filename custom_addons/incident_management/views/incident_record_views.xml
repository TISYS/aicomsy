<odoo>
    <record id="incident_record_model_action" model="ir.actions.act_window">
        <field name="name">All Incidents</field>
        <field name="res_model">x.incident.record</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="incident_record_list_view" model="ir.ui.view">
        <field name="name">incident.tree</field>
        <field name="model">x.incident.record</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="inc_date_time"/>
                <field name="inc_reported_date"/>
                <field name="type" widget="many2many_tags"/>
                <field name="location"/>
            </tree>
        </field>
    </record>
    <record id="incident_form_view" model="ir.ui.view">
        <field name="name">incident.form</field>
        <field name="model">x.incident.record</field>
        <field name="arch" type="xml">
            <form name="Incident Details">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="new,investigation_assigned,investigation_in_progress,action_review,closed"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group col="3">
                        <group>
                            <field name="inc_date_time"/>
                            <field name="inc_reported_date"/>
                        </group>
                        <group>
                            <field name="shift" widget="selection"/>
                            <field name="type" widget="many2many_tags" options="{'no_create': True, 'no_create_edit':True}"/>
                            <field name="location"/>
                        </group>
                        <group>
                            <field name="notified_by"/>
                            <field name="notified_by_id"/>
                            <field name="notified_by_type"/>
                        </group>
                        <group name="Description">
                            <field name="description" placeholder="Enter a description of the incident"/>
                        </group>

                    </group>
                    <notebook>
                        <page string="People">
                            <field name="incident_person_ids" />
                        </page>
                        <page string="Assets">
                            <field name="incident_asset_ids" />
                        </page>
                        <page string="Environmental">
                            <field name="incident_spill_ids" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>