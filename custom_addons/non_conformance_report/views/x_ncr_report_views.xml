<odoo>
    <record id="x_ncr_report_action" model="ir.actions.act_window">
        <field name="name">NCR Reports</field>
        <field name="res_model">x.ncr.report</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="x_ncr_report_list_view" model="ir.ui.view">
        <field name="name">report.tree</field>
        <field name="model">x.ncr.report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="ncr_type"/>
                <field name="project_name_title"/>
                <field name="tag_no_location"/>
                <field name="ncr_category"/>
                <field name="ncr_list" invisible="1"/>
            </tree>
        </field>
    </record>
    <record id="view_x_ncr_report_form" model="ir.ui.view">
        <field name="name">x.ncr.report.form</field>
        <field name="model">x.ncr.report</field>
        <field name="arch" type="xml">
            <form name="NCR Reports">
                <sheet>
                    <h>
                        <field name="name"/>
                    </h>
                    <group col="3">
                        <group>
                            <field name="ncr_list" invisible="1"/>
                            <field name="ncr_type"/>
                            <field name="discipline" attrs="{'invisible': [('ncr_list', '=', False)]}"/>
                            <field name="supplier_name" attrs="{'invisible': [('ncr_list', '=', False)]}"/>
                            <field name="purchase_order_no" attrs="{'invisible': [('ncr_list', '=', False)]}"/>
                            <field name="project_number"/>
                            <field name="project_name_title"/>
                            <field name="tag_no_location"/>
                        </group>
                        <group>
                            <field name="shipment_reference" attrs="{'invisible': [('ncr_list', '=', False)]}"/>
                            <field name="received_date" attrs="{'invisible': [('ncr_list', '=', False)]}"/>
                            <field name="inspection_stage"/>
                            <field name="rfi_number"/>
                            <field name="nc_table"/>
                        </group>
                        <group>
                            <field name="ncr_open_date"/>
                            <field name="ncr_approver_name"/>
                            <field name="rca_response_due_date"/>
                            <field name="title"/>
                            <field name="ncr_category"/>
                        </group>
                    </group>
                    <field name="ncr_nc_ids"/>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
